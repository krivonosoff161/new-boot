# Enhanced Trading System v3.0 Commercial - Environment Configuration

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# =============================================================================

# Режим работы (development, production, testing)
ENVIRONMENT=development

# Секретный ключ для Flask (сгенерируйте новый для продакшена)
SECRET_KEY=your-secret-key-here

# URL базы данных
DATABASE_URL=sqlite:///data/database/secure_users.db

# =============================================================================
# TELEGRAM BOT
# =============================================================================

# Токен Telegram бота (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ID администратора Telegram (ваш Telegram ID)
TELEGRAM_ADMIN_ID=your-telegram-admin-id-here

# =============================================================================
# ТОРГОВЫЕ НАСТРОЙКИ
# =============================================================================

# Режим торговли (sandbox, live)
TRADING_MODE=sandbox

# Биржа по умолчанию (okx, binance, bybit)
DEFAULT_EXCHANGE=okx

# =============================================================================
# API КЛЮЧИ БИРЖ (для демо режима)
# =============================================================================

# OKX API (демо)
OKX_API_KEY=your-okx-api-key-here
OKX_SECRET_KEY=your-okx-secret-key-here
OKX_PASSPHRASE=your-okx-passphrase-here
OKX_SANDBOX=true

# Binance API (демо)
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_SECRET_KEY=your-binance-secret-key-here
BINANCE_TESTNET=true

# Bybit API (демо)
BYBIT_API_KEY=your-bybit-api-key-here
BYBIT_SECRET_KEY=your-bybit-secret-key-here
BYBIT_TESTNET=true

# =============================================================================
# ПЛАТЕЖНЫЕ СИСТЕМЫ
# =============================================================================

# Stripe
STRIPE_PUBLIC_KEY=your-stripe-public-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here
PAYPAL_MODE=sandbox

# =============================================================================
# EMAIL НАСТРОЙКИ
# =============================================================================

# SMTP настройки для отправки email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_USE_TLS=true

# =============================================================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ
# =============================================================================

# Sentry для мониторинга ошибок
SENTRY_DSN=your-sentry-dsn-here

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================

# Ключ шифрования для API ключей (сгенерируйте новый)
ENCRYPTION_KEY=your-encryption-key-here

# Соль для хеширования паролей
PASSWORD_SALT=your-password-salt-here

# =============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# =============================================================================

# Количество воркеров для Gunicorn
WORKERS=4

# Таймаут для запросов (секунды)
REQUEST_TIMEOUT=30

# Максимальный размер файла (MB)
MAX_CONTENT_LENGTH=16

# =============================================================================
# КЭШИРОВАНИЕ
# =============================================================================

# Redis URL для кэширования
REDIS_URL=redis://localhost:6379/0

# Время жизни кэша (секунды)
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# РАЗРАБОТКА
# =============================================================================

# Включить отладочный режим
DEBUG=true

# Автоперезагрузка при изменениях
RELOAD=true

# Показывать SQL запросы
SQLALCHEMY_ECHO=false








